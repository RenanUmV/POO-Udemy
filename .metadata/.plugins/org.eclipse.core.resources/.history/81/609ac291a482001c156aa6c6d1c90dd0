package Lista03;

import java.util.Scanner;

public class Exercicio03 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int alcool = 0;
		int gasolina = 0;
		int diesel = 0;
		int resp = 0;
		
		while (true) {
			System.out.print("Digite o tipo de combustível abastecido (1)Alcool (2)Gasolina (3)Diesel: ");
			resp = scan.nextInt();
			
			if (resp == 1) {
				alcool += 1;
			} else if(resp == 2) {
				gasolina += 1;
			} else if(resp == 3) {
				diesel += 1;
			}
		}
	}
}
